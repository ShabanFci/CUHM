<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ambulance"
                style="@style/styleButton"
                android:text="@string/button_1QHelp" />

            <Button
                android:id="@+id/btn_fire"
                style="@style/styleButton"
                android:text="@string/button_2QHelp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_police"
                style="@style/styleButton"
                android:text="@string/button_3QHelp" />

            <Button
                android:id="@+id/app_support"
                style="@style/styleButton"
                android:text="@string/button_4QHelp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b5"
                style="@style/styleButton"
                android:text="@string/button_5QHelp" />

            <Button
                android:id="@+id/b6"
                style="@style/styleButton"
                android:text="@string/button_6QHelp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>