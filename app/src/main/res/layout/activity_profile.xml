<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fci.steps.cuhm.ProfileActivity">

    <include
        android:id="@+id/connection_profile_toolbar"
        layout="@layout/app_bar_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/display_profile_status"
        android:layout_below="@+id/connection_profile_toolbar"
        android:layout_marginTop="32dp"
        android:contentDescription="profileimage"
        app:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/display_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="dispaly_profile_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/display_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="current_user_job"
        android:textSize="18sp" />
</RelativeLayout>
